				modalElement.style.display = "none";
			}
		}
	},

	/**
	 * Get host name
	 * @returns {string} Host name
	 */
	getHostName: function () {
		return 'http://' + window.location.host;
	},

	/**
	 * Get table name from json
	 * @param {Object} table - Table object
	 * @returns {string} Table name lower cased
	 */
	getTableNameFromJson: function(table) {
		return table['tableName'];
	},

	/**
	 * Get table name
	 * @param {Object} table - Table element
	 * @returns {string} table name
	 */
	getTableNameFromElement: function (table) {
		var previousElement = table.previousElementSibling;
		return previousElement.value;
	},

	/**
	 * Get column name from json
	 * @param {Object} column - Column object
	 * @returns {string} Column name lower cased
	 */
	getColumnNameFromJson: function(column) {
		return column['columnName'];
	},

	/**
	 * Extract previous comment
	 * @param {Object} columnCommentElemnet - Ccolumn comment elemnet
	 * @returns {string} Previous comment
	 */
	extractPreviousComment: function (columnCommentElemnet) {
		var child = columnCommentElemnet.querySelector('pre').childNodes[0];
		if (child != null && child.nodeName === "#text") {
			return child.nodeValue.trim();
		}
		return "";
	},

	/**
	 * Check new decomment and previous comment is different
	 * @param {string} tableName - Table name
	 * @param {string} columnName - Column name
	 * @param {string} decomment - decomment
	 * @returns {Boolean} is changed
	 */
	isCommentChanged: function (tableName, columnName, decomment) {
		var commentMap;
		if (columnName) {
			commentMap = this.getColumnMapInfoFromStore(tableName, columnName);
		} else {
			commentMap = this.getTableMapInfoFromStore(tableName);
		}
		if (commentMap !== null) {
			var previousComment = commentMap['previousWholeComment'];
			if (previousComment) {
				return previousComment.trim() !== decomment.trim();
			}
		}
		return decomment.trim().length != 0;
	},

	/**
	 * Build comment request body
	 * @param {string} tableName - Table name
	 * @param {string} columnName - Column name (null if save table comment)
	 * @param {string} decomment - Inputed decomment
	 * @return {Object} Request body
	 */
	buildCommentRequestParams: function (tableName, columnName, decomment) {
		var commentMap = this.getCommentMapFromStore(tableName, columnName);
		var databaseComment;
		var targetType = columnName == null ? 'TABLE' : 'COLUMN';
		if (commentMap !== null) {
			var authors = commentMap['authors'];
			var previousPieces = commentMap['previousPieces'];
			var commentVersion = commentMap['commentVersion'];
			databaseComment = commentMap['databaseComment'];
			if (databaseComment) {
				databaseComment = this.escapeNewlineCharacter(databaseComment);
			}
		}

		decomment = this.escapeInputText(decomment);
		decomment = this.deleteUnnecessaryWhitespace(decomment);

		return {
			'tableName': tableName,
			'columnName': columnName,
			'targetType': targetType,
			'decomment': decomment,
			'databaseComment': databaseComment,
			'commentVersion': commentVersion || 0,
			'authors': authors || [],
			'previousPieces': previousPieces || []
		};
	},

	/**
	 * Escape inputed text
	 * @param {String} string - text
	 */
	escapeInputText: function (string) {
		if(typeof string !== 'string') {
			return string;
		}
		return string.replace(/[&'`"<>]/g, function(match) {
			return {
				'&': '&amp;',
				"'": '&#x27;',
				'`': '&#x60;',
				'"': '&quot;',
				'<': '&lt;',
				'>': '&gt;',
			}[match]
		});
	},

	/**
	 * Escape newline character of text
	 * @param {String} string - text
	 */
	escapeNewlineCharacter: function (string) {
		return string.split('<br>').join('\n')
	},

	/**
	 * Delete unnecessary whitespace
	 * @param {String} string - text
	 */
	deleteUnnecessaryWhitespace: function(string) {
		var commentArray = string.split("\n");
		var result = "";
		for(var i = 0; i < commentArray.length; i++) {
			result += commentArray[i].replace(/\s+$/g,'');
			if (!(i == commentArray.length - 1)) {
				result += '\n';
			}
		}
		return result.trim();
	},

	/**
	 * Request decomment
	 * @param {string} schemeName - Scheme name
	 * @param {Object} params - Request parameters
	 */
	requestSaveDecomment: function (schemeName, params) {
		var http = new XMLHttpRequest();
		http.withCredentials = true;
		var url = this.getHostName() + '/api/document/decomment/' + schemeName + '/save';
		http.open('POST', url, true);

		var that = this;
		http.onreadystatechange = function () {
			if (http.readyState === 4) {
				if (http.status === 200) {
					// request success
					that.fetchVirtualPickup(schemeName);
				} else {
					// request failed
					alert('Error!! cannot save new column comment.');
				}
			}
		};
		http.send(JSON.stringify(params, null, "  "));
	},

	/**
	 * Get comment map from store.
	 * @param {string} tableName - Table name
	 * @param {string} columnName - column name
	 * @returns {Object} commentMap - Comment object of table or column
	 */
	getCommentMapFromStore: function(tableName, columnName) {
		return columnName ? this.getColumnMapInfoFromStore(tableName, columnName) : this.getTableMapInfoFromStore(tableName);
	},

	/**
	 * Get table object from pickup store.
	 * @param {string} tableName - Table name
	 * @return {Object} Column object
	 */
	getTableMapInfoFromStore: function (tableName) {
		var tableMap = this.pickupStore[tableName];
		if (tableMap === undefined) {
			return null;
		}
		return tableMap;
	},

	/**
	 * Get column object from pickup store.
	 * @param {string} tableName - Table name
	 * @param {string} columnName - Column name
	 * @return {Object} Column object
	 */
	getColumnMapInfoFromStore: function (tableName, columnName) {
		var tableMap = this.pickupStore[tableName];
		if (tableMap === undefined) {
			return null;
		}
		var columns = tableMap['columns'];
		if (columns === undefined) {
			return null;
		}
		var columnMap = columns[columnName];
		if (columnMap === undefined) {
			return null;
		}
		return columnMap;
	}
};

new Decomment().init();
