        bool HasWhereClause();
        bool HasOrderByClause();
        bool HasUnionQueryOrUnionAllQuery();

        // ===============================================================================
        //                                                              Query Synchronizer
        //                                                              ==================
        void xregisterUnionQuerySynchronizer(${glUnionQuery}<${glConditionBean}> unionQuerySynchronizer);
